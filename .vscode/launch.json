{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (Node.js)",
            "program": "${workspaceFolder}/backend/server.js",
            "cwd": "${workspaceFolder}/backend",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Frontend in Chrome",
            "url": "file://${workspaceFolder}/frontend/index.html",
            "webRoot": "${workspaceFolder}/frontend"
        }
    ],
    "compounds": [
        {
            "name": "Debug Backend & Frontend",
            "configurations": [
                "Debug Backend (Node.js)",
                "Launch Frontend in Chrome"
            ]
        }
    ]
}